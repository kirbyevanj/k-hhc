CompileFlags:
  Add:
    # C++23 standard
    - "-std=c++23"
    # Python includes (for python/ directory)
    # Try common locations - clangd will use the first one that exists
    - "-I/usr/include/python3.13"
    - "-I/usr/include/python3.12"
    - "-I/usr/include/python3.11"
    - "-I/usr/include/python3.10"
    - "-I/usr/include/python3.9"
    - "-I/usr/include/python3.8"
    - "-I/usr/include/python3.7"
    - "-I/usr/local/include/python3.13"
    - "-I/usr/local/include/python3.12"
    - "-I/usr/local/include/python3.11"
    - "-I/usr/local/include/python3.10"
    - "-I/usr/local/include/python3.9"
    - "-I/usr/local/include/python3.8"
    - "-I/usr/local/include/python3.7"
    # Define Py_LIMITED_API for Limited API mode
    - "-DPy_LIMITED_API=0x03070000"
    - "-DPY_SSIZE_T_CLEAN"
    # Common warnings
    - "-Wall"
    - "-Wextra"
  Remove:
    # Remove MSVC-specific flags if present
    - "-W*"

Diagnostics:
  UnusedIncludes: Strict
  MissingIncludes: Strict
  ClangTidy:
    Add:
      - modernize-*
      - performance-*
      - readability-*
    Remove:
      - modernize-use-trailing-return-type
      - readability-identifier-length
      - readability-magic-numbers
      - bugprone-string-literal-with-embedded-nul

Index:
  Background: Build

InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes
  Designators: Yes

Hover:
  ShowAKA: Yes

Completion:
  AllScopes: Yes

